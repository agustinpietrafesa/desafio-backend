<h1>REAL TIME PRODUCTS</h1>
<div>
    <h2>Add Product</h2>
    <form  id="addProductForm">
        <label for="title">Title:</label>
        <input type="text" placeholder="Title" id="title" >
        <label for="Description">Description:</label>
        <input type="text" placeholder="Description" id="description" >
        <label for="code">Code:</label>
        <input type="text" placeholder="Code" id="code" >
        <label for="price">Price:</label>
        <input type="number" placeholder="Price" id="price" >
        <label for="stock">Stock:</label>
        <input type="number" placeholder="Stock" id="stock" >
        <label for="category">Category:</label>
        <input type="text" placeholder="Category" id="category" >

        <button type="submit">Add Product</button>

    </form>

    <h2>Delete Product</h2>
        <form  id="deleteProduct">
            <label for="id">Id:</label>
            <input type="number" placeholder="Id" id="id" >
            <button type="submit">Delete product</button>

        </form>

    <h2>Our products in real time:</h2>

    {{#each products}}
        <div>
            <h4>Title: {{this.title}} Product description: {{this.description}} Code: {{this.code}} Stock: {{this.stock}} Id: {{this.id}}</h4>
        </div>
    {{/each}}

</div>


<script src="/socket.io/socket.io.js"></script>
<script src="/js/JS.realTimeProducts.js"></script>